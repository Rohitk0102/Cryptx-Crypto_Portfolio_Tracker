# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Get from your PostgreSQL provider (Supabase, Neon, Railway)
DATABASE_URL="postgresql://user:password@localhost:5432/cryptx"

# Redis Configuration
# Get from your Redis provider (Upstash, Redis Cloud)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
# Generate secure random strings (32 characters recommended)
JWT_SECRET="your-32-character-jwt-secret-key"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_SECRET="your-32-character-refresh-secret-key"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Encryption Configuration
# MUST be exactly 32 characters
ENCRYPTION_KEY="your-exactly-32-character-key!"

# Blockchain RPC URLs
# Get free API keys from Alchemy, Infura, or use public RPCs
ETH_RPC_URL="https://eth-mainnet.g.alchemy.com/v2/YOUR-ALCHEMY-API-KEY"
POLYGON_RPC_URL="https://polygon-mainnet.g.alchemy.com/v2/YOUR-ALCHEMY-API-KEY"
BSC_RPC_URL="https://bsc-dataseed.binance.org/"

# Price API Configuration
# CoinGecko is free, optional API key for higher limits
COINGECKO_API_KEY=""

# Optional: CoinMarketCap API (for backup price feeds)
COINMARKETCAP_API_KEY=""

# CORS Configuration
FRONTEND_URL="http://localhost:3000"

# Optional: Token Discovery APIs
COVALENT_API_KEY=""
MORALIS_API_KEY=""

# AI Analysis Configuration
# Get API key from OpenAI or Anthropic
OPENAI_API_KEY=""
# Or use Anthropic Claude
ANTHROPIC_API_KEY=""

# Hugging Face API Configuration
# Get free API key from https://huggingface.co/settings/tokens
# Used for AI-powered price forecasting with Chronos model
HUGGINGFACE_API_KEY=""

# Gate.io API Configuration
# Get API credentials from https://www.gate.io/myaccount/apiv4keys
GATE_API_KEY=""
GATE_API_SECRET=""

# Snapshot Scheduler
ENABLE_SNAPSHOT_SCHEDULER="false"

# Development Settings
DEBUG=true
LOG_LEVEL="info"
